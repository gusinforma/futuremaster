.ui.inverted.blue.main.menu,
.ui.inverted.blue.pointing.main.menu .active.item::after {
    background-image: linear-gradient(to bottom, #4b94e6 0px, #1f79df 100%);
}

.ui.main.menu {
    border-radius: 0;
    margin-top: 0;
}

.ui.main.floater.menu {
    opacity: 0;
}

.ui.main.floater.fixed.menu {
    transition: opacity .25s ease;
    opacity: 1;
}
